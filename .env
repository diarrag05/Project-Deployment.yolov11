# ============================================
# Configuration Flask / API
# ============================================
FLASK_ENV=development
FLASK_DEBUG=True
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
FLASK_MAX_UPLOAD_SIZE=16

# ============================================
# Configuration des logs
# ============================================
LOG_LEVEL=INFO
LOGS_DIR=logs
LOG_APP=app.log
LOG_TRAINING=training.log

# ============================================
# Configuration YOLO
# ============================================
YOLO_CONF_THRESHOLD=0.25
YOLO_IOU_THRESHOLD=0.7
YOLO_IMG_SIZE=640

# ============================================
# Configuration Void Rate
# ============================================
VOID_RATE_THRESHOLD=5.0

# ============================================
# Configuration SAM
# ============================================
SAM_MODEL_TYPE=vit_h
SAM_CHECKPOINT_URL=https://dl.fbaipublicfiles.com/segment_anything/sam_vit_h_4b8939.pth

# ============================================
# Configuration Training
# ============================================
TRAINING_EPOCHS=100
TRAINING_BATCH_SIZE=8
TRAINING_PATIENCE=30

# CHEMINS
# ============================================
MODELS_DIR=models/
DATASET_DIR=dataset/
OUTPUT_DIR=outputs/
RESULTS_DIR=results/
INFERENCE_DIR=inference/
SAM_OUTPUT_DIR=sam_segmentation/
TRAIN_IMAGES_DIR=train/images/
TRAIN_LABELS_DIR=train/labels/
DEFAULT_MODEL=best.pt
YOLO_PRETRAINED_MODEL=yolo11s-seg.pt
DATA_YAML=data.yaml